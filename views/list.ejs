<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/svg+xml" href="https://example.com/image.svg">
    <title>ExpenseTracker</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }
        .container {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            padding: 20px;
        }
        .expenses {
            flex-grow: 1;
            margin-right: 20px;
        }
        .sidebar {
            margin-top: 60px;
            flex-basis: 200px;
            background-color: #f4f4f4;
            border-radius: 10px;
            border: 1px solid #ccc;
            padding: 20px;
        }
        h1 {
            margin-top: 12px;
            margin-bottom: 12px;
        }
        ul {
            margin-top: 0;
            list-style-type: none;
            padding: 0;
        }
        li {
            height:min-content;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
        }
        .expense-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
        }
        .expense-id {
            display: none;
        }
        .expense-name {
            width: 33%;
            font-weight: bold;
        }
        .income {
            color: green;
        }
        .expense {
            color: red;
        }
        .delete-btn {
            border-radius: 5px;
            background-color: #ff6666;
            color: white;
            border: none;
            padding: 5px 10px;
            cursor: pointer;
        }
        .add-expense-form {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            background-color: #f4f4f4;
            border-radius: 10px;
            padding: 20px;
        }
        .add-expense-form label {
            display: block;
            margin-bottom: 10px;
        }
        .add-expense-form input,
        .add-expense-form select {
            width: 90%;
            padding: 8px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        .add-expense-form button {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="expenses">
            <h1>Your expenses</h1>
            <ul>
                <% expenses.forEach(expense => { %>
                    <li>
                        <div class="expense-item">
                            <span class="expense-name"><%= expense.name %></span><br>
                            <span class="expense-id"><%= expense._id%></span>
                            <% if (expense.sign) { %>
                                <span id="expense-sum" class="income">+ <%= expense.sum %></span>
                            <% } else { %>
                                <span id="expense-sum" class="expense">- <%= expense.sum %></span>
                            <% } %>
                            <span class="expense-date"><%= expense.date %></span>
                            <form action="/delete/<%= expense._id %>" method="post">
                                <button class="delete-btn" type="submit">Delete</button>
                            </form>
                        </div>
                    </li>
                <% }) %>
                <li>
                    <form class="add-expense-form" action="/new" method="post">
                        <input type="hidden" id="expenseId" name="id" value="">
                        <div>
                            <label for="expenseName">Name:</label>
                            <input type="text" id="expenseName" name="name">
                            <label for="expenseSum">Amount:</label>
                            <input type="number" id="expenseSum" name="sum">
                        </div>
                        <div>
                            <label for="expenseSign">Type:</label>
                            <select id="expenseSign" name="sign">
                                <option value="true">Income</option>
                                <option value="false">Expense</option>
                            </select>
                        </div>
                        <div>
                            <label for="expenseDate">Date:</label>
                            <input type="date" id="expenseDate" name="date">
                            <button id="submitButton" type="submit">Add Expense</button>s
                        </div>
                    </form>
                </li>
            </ul>
        </div>
        <div class="sidebar">
            <h2>User Info</h2>
            <p>tbd</p>
        </div>
    </div>
    <script>
        const form = document.querySelector('.add-expense-form');
        const idInput = form.querySelector('#expenseId')
        const nameInput = form.querySelector('#expenseName');
        const sumInput = form.querySelector('#expenseSum');
        const signInput = form.querySelector('#expenseSign');
        const dateInput = form.querySelector('#expenseDate');
        
        const expenseItems = document.querySelectorAll('.expense-item');
        
        form.addEventListener('submit', function(event) {
            if(!nameInput.value || !sumInput.value || !dateInput.value){
                event.preventDefault();
            }
        })    

        function editExpense(expense) {
            form.action = "/change";
            const sum = expense.querySelector('#expense-sum').textContent.substring(2)
            console.log(sum);
            idInput.value = expense.querySelector('.expense-id').textContent.trim();
            nameInput.value = expense.querySelector('.expense-name').textContent.trim();
            signInput.value = expense.querySelector('#expense-sum').classList.contains('income') ? "true" : "false";
            sumInput.value = parseInt(expense.querySelector('#expense-sum').textContent.trim().substring(2));
            dateInput.value = expense.querySelector('.expense-date').textContent.trim();
            form.querySelector('#submitButton').textContent = 'Submit Changes';
        }
        
        expenseItems.forEach(expense => {
            expense.addEventListener('dblclick', () => {
                editExpense(expense);
            });
        });
        </script>
</body>
</html>
